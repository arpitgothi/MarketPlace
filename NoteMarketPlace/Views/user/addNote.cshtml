
@{
    ViewBag.Title = "addNote";
}

<!--      Add Notes Section -->
<section id="add-note">
    <div class="add-heading">
        <img src="img/home/banner-with-overlay.jpg" class="add-img img-responsive" alt="">
        <div class="centered">Add Notes</div>
    </div>
    <form action="">
        <div class="basic-note">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <p class="add-sub-heading">Basic Note Details</p>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <p>Title*</p>
                            <input type="text" class="form-control" id="name" placeholder="Enter your notes title">
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <p>Category*</p>
                            <select class="form-control">
                                <option>Select your category</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <p>Upload Notes*</p>
                            <input type="file" style="display: none" id="dispic">
                            <label for="dispic" class="form-control upload-label text-center" style="cursor:pointer">
                                <img src="img/Dashboard/upload-file.png" alt="Upload" />
                                <p>Upload Picture</p>
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <p>Display Picture</p>
                            <input type="file" style="display: none" id="upload-note">
                            <label for="upload-note" class="form-control upload-label text-center" style="cursor:pointer">
                                <img src="img/Dashboard/upload-note.svg" alt="Upload" />
                                <p>Upload your notes</p>
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <p>Type</p>
                            <select class="form-control">
                                <option>Select your note type</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <p>Number of Pages</p>
                            <input type="text" class="form-control" id="name" placeholder="Enter number of note pages">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <p>Description*</p>
                            <textarea class="form-control" id="message" placeholder="Comments..."></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="institution-info">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <p class="add-sub-heading">Institution Information</p>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <p>Country</p>
                            <select class="form-control">
                                <option>Select your Country</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <p>Institution Name</p>
                            <input type="text" class="form-control" id="name" placeholder="Enter your Institution name">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="course-details">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <p class="add-sub-heading">Course Details</p>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <p>Course Name</p>
                            <input type="text" class="form-control" id="name" placeholder="Enter your course name">
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <p>Course Code</p>
                            <input type="text" class="form-control" id="name" placeholder="Enter your course code">
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <p>Professor/Lecturer</p>
                            <input type="text" class="form-control" id="name" placeholder="Enter your Professor name">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="selling-info">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <p class="add-sub-heading">Selling Information</p>
                    </div>
                    <div class="col-md-6 inside">
                        <div class="col-md-12">
                            <div class="form-group">
                                <p>Sell For*</p>
                                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="free">
                                <label class="form-check-label" for="inlineRadio1">Free</label>
                                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="paid">
                                <label class="form-check-label" for="inlineRadio1">Paid</label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <p>Professor/Lecturer</p>
                                <input type="text" class="form-control" id="name" placeholder="Enter your Professor name">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <p>Note Preview</p>
                            <input type="file" style="display: none" id="upload-preview">
                            <label for="upload-preview" class="form-control upload-label text-center" style="cursor:pointer">
                                <img src="img/Dashboard/upload-note.svg" alt="Upload" />
                                <p>Upload a file</p>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="add-note-action">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <a class="btn btn-general btn-work btn-add-note smooth-scroll" href="#about" title="Sell Book" role="button">SAVE</a>
                        <a class="btn btn-general btn-work btn-add-note smooth-scroll" href="#about" title="Sell Book" role="button">PUBLISH</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>
<!--      Add Notes Section Ends -->
