
@{
    ViewBag.Title = "manageCountry";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    @model IEnumerable< NoteMarketPlace.Models.noteData>
}

<!-- manage  Country -->
<section id="manage-country">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <p class="page-heading"> Manage Country</p>
            </div>
            <div class="col-md-6 col-sm-6">
                <a class="btn btn-general btn-work  smooth-scroll" href="#about" title="Add Admin" role="button">Add Country</a>
            </div>
            <div class="col-md-6 col-sm-6 search-div">
                <div class="col-md-8 col-sm-8 col-xs-8">
                    <input class="form-control search-input" placeholder="Search..." type="text">
                </div>
                <div class="col-md-4 col-sm-4 col-xs-4" id="search">
                    <a class="btn-general btn-work smooth-scroll" title="search" role="button">Search</a>
                </div>
            </div>
            <div class="col-md-12">
                <div class="all-category-table table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">SR NO.</th>
                                <th scope="col">COUNTRY NAME</th>
                                <th scope="col">COUNTRY CODE</th>
                                <th scope="col">DATE ADDED</th>
                                <th scope="col">ADDED BY</th>
                                <th scope="col">ACTIVE</th>
                                <th scope="col">ACTION</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ var i = ViewBag.Count - 1; }
                            @foreach (var n in Model)
                            {
                                string a = "";

                                i = i + 1;
                                <tr>
                                    <td>@i</td>
                                    <td>@Html.DisplayFor(modelItem => n.Country.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => n.Country.CountryCode)</td>
                                    <td>@Html.DisplayFor(modelItem => n.Country.CreatedDate)</td>
                                    <td>
                                        @string.Concat(n.User.FirstName , " ", n.User.LastName)
                                    </td>
                                    @{
                                        bool IsActive = n.Country.IsActive;
                                        if (IsActive)
                                        {
                                            <td>Yes</td>
                                        }
                                        else
                                        {
                                            <td>No</td>
                                        }
                                    }
                                    <td>
                                        <a class="link-margin" href="#"><img src="../img/dashboard/edit.png"></a> &nbsp;&nbsp;
                                        <a class="link-margin" href="#"><img src="../img/dashboard/delete.png"></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="text-center" aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="disabled"><a href="#">«</a></li>
                        <li class="active"><a href="#">1 <span class="sr-only">(current)</span></a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li><a href="#">»</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- manage country Ends -->
