@model IEnumerable<NoteMarketPlace.Models.noteData>
@{
    ViewBag.Title = "noteDetails";


}

<h2>noteDetails</h2>

<!-- Book detais in deep-->
<section id="myNav" class="overlay">
    @foreach (var items in Model)
    {
        <div class="note-details">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12 closebtn-div">
                        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <p id="note-details">Notes Details</p>
                        <div class="row">
                            <div class="col-md-5 col-sm-5">
                                <img class="img-responsive book-cover-photo" src="img/home/banner.jpg" alt="">
                            </div>
                            <div class="col-md-7 col-sm-7">
                                <p id="note-name">@items.sellerNote.Title</p>
                                <p id="sub-name">@items.NoteCategory.Name</p>
                                <p id="discription">@items.sellerNote.Description</p>
                                @if (!User.Identity.IsAuthenticated)
                                {

                                    <a class="btn btn-general btn-work smooth-scroll" href="/appAuth/login" title="Download" role="button">Download/ $<span id="book-price">@items.sellerNote.SellingPrice</span></a>
                                }
                                else
                                {
                                    <a class="btn btn-general btn-work smooth-scroll" title="Download" role="button" onclick="Selling(@items.sellerNote.ID);">Download/ $<span id="book-price">@items.sellerNote.SellingPrice</span>USD</a>
                                }

                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row notes-right">
                            <div class="row">
                                <div class="text-left col-md-5 col-sm-5 col-xs-5">
                                    <p>Institution:</p>
                                </div>
                                <div class="text-right col-md-7 col-sm-7 col-xs-7">
                                    @if (items.sellerNote.UniversityName != null)
                                    {
                                        <p id="uni-name" class="note-ans">@items.sellerNote.UniversityName</p>
                                    }
                                    else
                                    {
                                        <p id="uni-name" class="note-ans">No Data Found </p>
                                    }
                                </div>
                                <div class="text-left col-md-5 col-sm-5 col-xs-5">
                                    <p>Country:</p>
                                </div>
                                <div class="text-right col-md-7 col-sm-7 col-xs-7">
                                    @if (items.Country.Name != null)
                                    {
                                        <p id="country-name" class="note-ans">@items.Country.Name</p>
                                    }
                                    else
                                    {
                                        <p class="note-ans">No Data Found </p>
                                    }
                                </div>
                                <div class="text-left col-md-5 col-sm-5 col-xs-5">
                                    <p>Course Name:</p>
                                </div>
                                <div class="text-right col-md-7 col-sm-7 col-xs-7">
                                    @if (items.sellerNote.Course != null)
                                    {
                                        <p id="course-name" class="note-ans">@items.sellerNote.Course</p>
                                    }
                                    else
                                    {
                                        <p class="note-ans">No Data Found </p>
                                    }
                                </div>
                                <div class="text-left col-md-5 col-sm-5 col-xs-5">
                                    <p>Course Code:</p>
                                </div>
                                <div class="text-right col-md-7 col-sm-7 col-xs-7">
                                    @if (items.sellerNote.CourseCode != null)
                                    {
                                        <p id="course-code" class="note-ans">@items.sellerNote.CourseCode</p>
                                    }
                                    else
                                    {
                                        <p class="note-ans">No Data Found </p>
                                    }
                                </div>
                                <div class="text-left col-md-5 col-sm-5 col-xs-5">
                                    <p>Professor:</p>
                                </div>
                                <div class="text-right col-md-7 col-sm-7 col-xs-7">
                                    @if (items.sellerNote.Professor != null)
                                    {
                                        <p id="prof-name" class="note-ans">@items.sellerNote.Professor</p>
                                    }
                                    else
                                    {
                                        <p class="note-ans">No Data Found </p>
                                    }
                                </div>
                                <div class="text-left col-md-5 col-sm-5 col-xs-5">
                                    <p>Pages:</p>
                                </div>
                                <div class="text-right col-md-7 col-sm-7 col-xs-7">
                                    @if (items.sellerNote.NumberofPages != null)
                                    {
                                        <p id="num-pages" class="note-ans">@items.sellerNote.NumberofPages</p>
                                    }
                                    else
                                    {
                                        <p class="note-ans">No Data Found </p>
                                    }
                                </div>
                                <div class="text-left col-md-5 col-sm-5 col-xs-5">
                                    <p>Approved Date:</p>
                                </div>
                                <div class="text-right col-md-7 col-sm-7 col-xs-7">
                                    @if (items.sellerNote.PublishedDate != null)
                                    {
                                        <p id="date" class="note-ans">@items.sellerNote.PublishedDate</p>
                                    }
                                    else
                                    {
                                        <p class="note-ans">No Data Found </p>
                                    }
                                </div>
                                <div class="text-left col-md-5 col-sm-5 col-xs-5">
                                    <p>Rating:</p>
                                </div>
                                <div class="text-right col-md-7 col-sm-7 col-xs-7">
                                    @if (items.sellerNote.UniversityName != null)
                                    {
                                        <p id="Rating" class="note-ans">@items.sellerNote.PublishedDate</p>
                                    }
                                    else
                                    {
                                        <p class="note-ans">No Data Found </p>
                                    }
                                    <p id="" class="note-ans"> <i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star-o" aria-hidden="false"></i> Review</p>
                                </div>
                                <div id="user-report-book" class="text-left col-md-12 col-sm-12 col-xs-12">
                                    <p><span>5</span> User marked this note as inappropriate</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="col-md-5">
                    <div class="col-md-12">
                        <p class="note-preview">Notes Preview</p>
                    </div>
                    <div class="col-md-12">
                        <div class="preview-page text-center">
                            <p>1/13</p>
                            <img class="img-responsive" src="img/home/banner.jpg" alt="book preview">
                        </div>
                    </div>
                </div>
                <div class="col-md-7">
                    <div class="col-md-12">
                        <p class="note-preview">Customers Review</p>
                    </div>
                    <div class="col-md-12 review-page">
                        <div class="col-md-2">
                            <img class="img-responsive img-circle" src="img/home/customer-1.png" alt="custoer-photo">
                        </div>
                        <div class="col-md-10">
                            <div class="rating-info">
                                <p>
                                    Name <br>
                                    <i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star-o" aria-hidden="false"></i>
                                    <br>
