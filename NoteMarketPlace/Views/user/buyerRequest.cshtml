
@{
    ViewBag.Title = "buyerRequest";
    @model IEnumerable<NoteMarketPlace.Models.noteData>
}
<br />
<br />
<br />

<section id="buyer-request">
    <div class="row">
        <div class="col-md-7 col-sm-7 col-xs-12">
            <p>Buyer Requests</p>
        </div>
        <div class="col-md-5 col-sm-5 col-xs-12 text-right">
            <div class="dashboard-search">
                <div class="col-md-8 col-sm-8 col-xs-8">
                    <div class="form-group">
                        <input class="form-control" type="text">
                    </div>
                </div>
                <div class="col-md-4 col-sm-4 col-xs-4" id="search">
                    <a class="btn-general btn-work smooth-scroll" title="search" role="button">Search</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="buyer-request-table table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">SR NO.</th>
                            <th scope="col">NOTE TITLE</th>
                            <th scope="col">CATAGORY</th>
                            <th scope="col">BUYER</th>
                            <th scope="col">PHONE NO.</th>
                            <th scope="col">SELL TYPE</th>
                            <th scope="col">PRICE</th>
                            <th scope="col">DOWNLOAD DATE/TIME</th>
                            <th scope="col">ACTION</th>
                        </tr>
                    </thead>

                    <tbody>
                        @{ int i = 0;}
                        @foreach (var n in Model)
                        {
                            i += 1;
                            string number = "";
                            <tr>
                                <td>@i</td>
                                <td>@Html.DisplayFor(item => n.download.NoteTitle)</td>
                                <td>@Html.DisplayFor(item => n.download.NoteCategory)</td>
                                <td>@Html.DisplayFor(item => n.User.EmailID)</td>
                                <td>
                                    @string.Concat(n.userProfile.PhoneNumber_CountryCode, "-", n.userProfile.PhoneNumber)


                                </td>
                                @{
                                    bool ispaid = n.download.IsPaid;
                                    if (ispaid)
                                    {
                                        <td>Paid</td>
                                    }
                                    else
                                    {
                                        <td>Free</td>
                                    }
                                }
                                <td>@Html.DisplayFor(item => n.download.PurchasedPrice)</td>
                                <td>@Html.DisplayFor(item => n.download.CreatedDate)</td>
                                <td class="dropdown">
                                    <a class="link-margin" href="#"><img src="img/dashboard/eye.png"></a>
                                    <div id="dots" class="btn-group">
                                        <img class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" src="img/dashboard/dots.png">
                                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-left">
                                            <button class=" text-left dropdown-item action-dropdown-item" type=""> Allow Download</button>
                                        </div>
                                    </div>
                                </td>
                            </tr>

                        }


                    </tbody>
                </table>
            </div>
            <div class="text-center" aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="disabled"><a href="#">«</a></li>
                    <li class="active"><a href="#">1 <span class="sr-only">(current)</span></a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li><a href="#">»</a></li>
                </ul>
            </div>
        </div>
    </div>
</section>


