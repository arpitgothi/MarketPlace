
@{
    ViewBag.Title = "myDownloads";
    @model IEnumerable<NoteMarketPlace.Models.noteData>
}

<h2>myDownloads</h2>

<section id="my-downloads">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <p class="page-heading">My Downloads</p>
            </div>
            <div class="col-md-5">
                <div class="row">
                    <div class="col-md-8 col-sm-8 col-xs-8">
                        <input class="form-control search-input" placeholder="Search" type="text">
                    </div>
                    <div class="col-md-4 col-sm-4 col-xs-4 text-right" id="search">
                        <a class="btn-general btn-work smooth-scroll" title="search" role="button">Search</a>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="all-category-table table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="text-center" scope="col">SR NO.</th>
                                <th class="text-center" scope="col">NOTE TITLE</th>
                                <th class="text-center" scope="col">CATEGORY</th>
                                <th class="text-center" scope="col">BUYER</th>
                                <th class="text-center" scope="col">SELL TYPE</th>
                                <th class="text-center" scope="col">PRICE</th>
                                <th class="text-center" scope="col">DOWNLOADED DATE/TIME</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int i = 0; }
                            @foreach (var n in Model)
                            {
                                i = i + 1;
                                <tr>
                                    <td>@i</td>
                                    <td>@Html.DisplayFor(modelItem => n.download.NoteTitle)</td>
                                    <td>@Html.DisplayFor(modelItem => n.download.NoteCategory)</td>
                                    <td>@Html.DisplayFor(modelItem => n.User.EmailID)</td>
                                    @{
                                        bool isPaid = n.download.IsPaid;
                                        if (isPaid)
                                        {
                                            <td>Paid</td>
                                        }
                                        else
                                        {
                                            <td>Free</td>
                                        }
                                    }
                                    <td>@Html.DisplayFor(modelItem => n.download.PurchasedPrice)</td>
                                    <td>@Html.DisplayFor(modelItem => n.download.CreatedDate)</td>
                                    <td><a class="link-margin" href="#"><img src="../img/dashboard/eye.png"></a></td>
                                    <td class="dropdown">
                                        <div id="user-photo" class="mynav_dropdown">
                                            <img class="img-responsive img-circle dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" src="../../img/dashboard/dots.png" alt="user">
                                            <div class="dropdown-menu mynav_dropdown-content dropdown-menu-right">
                                                <button class="text-left dropdown-item nav-dropdown-item" type="button" onclick="location.href='/User/mydownloads/@n.download.ID'">Downnload Notes</button>
                                                <button class="text-left dropdown-item nav-dropdown-item" type="button" onclick="addReview(@n.download.ID)">Add Reviews / Feedback</button>
                                                <button class="text-left dropdown-item nav-dropdown-item spam-btn" type="button">Report as inappropiate</button>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
    <div id="download-review" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <p id="review-heading"> Add Review</p>
            <p id="add-book-review-star" class="book-review-star"> <i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star-o" aria-hidden="false"></i></p>
            <div class="form-group">
                <p>Comments*</p>
                <textarea placeholder="Comments..." class="form-control" id="text-area" name="rejectRemark" required style="max-width:400px; height:150px"></textarea>
            </div>
            <div>
                <Button class="btn btn-work">&nbsp;Submit&nbsp;</Button>
            </div>
        </div>
    </div>
    <div id="Report-popup" class="modal">
        <!-- Modal content -->
        <div class="modal-content">
            <span class="close">&times;</span>
            <p class="popup-heading">Some text in the Modal..</p>
            <input type="hidden" name="noteId" value="" />
            <p>Are you sure you want to mark this report as spam, you cannot update it later?</p>
            <textarea class="form-control" placeholder="Issues..." name="noteIssues" required rows="5"></textarea>
            <p id="msg" style="color:red"></p>
            <br />
            <div class="text-right">
                <Button class="btn btn-success" id="confirm-spam">&nbsp;Yes&nbsp;</Button>
                <a class="btn btn-danger close-btn">&nbsp;No&nbsp;</a>
            </div>
        </div>
    </div>
</section>
