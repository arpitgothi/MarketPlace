
@{
    ViewBag.Title = "rejectedNotes";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    @model IEnumerable<NoteMarketPlace.Models.noteData>
}

<!-- a-rejected note -->
<section id="a-rejected-note">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <p class="page-heading">Rejected Notes</p>
                <p>Seller</p>
            </div>
            <div class="col-md-6 col-sm-6">
                <select class="form-control" style=" max-width: 150px; margin-top: -5px">
                    <option>
                        Khyati
                    </option>
                    <option>
                        Raj
                    </option>
                    <option>
                        Rahul
                    </option>
                </select>
            </div>
            <div class="col-md-6 col-sm-6 search-div">
                <div class="col-md-8 col-sm-8 col-xs-8">
                    <input class="form-control search-input" placeholder="Search..." type="text">
                </div>
                <div class="col-md-4 col-sm-4 col-xs-4" id="search">
                    <a class="btn-general btn-work smooth-scroll" title="search" role="button">Search</a>
                </div>
            </div>
            <div class="col-md-12">
                <div class="all-admin-table table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">SR NO.</th>
                                <th scope="col">NOTE TITLE</th>
                                <th scope="col">CATEGORY</th>
                                <th scope="col">SELLER</th>
                                <th scope="col">DATE ADDED</th>
                                <th scope="col">REJECTED BY</th>
                                <th scope="col">REMARK</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int i = ViewBag.Count - 1; }
                            @foreach (var n in Model)
                            {
                                i = i + 1;
                            <tr>
                                <td>@i</td>
                                <td>@Html.DisplayFor(m => n.sellerNote.Title)</td>
                                <td>@Html.DisplayFor(m => n.NoteCategory.Name)</td>
                                <td>@string.Concat(n.User.FirstName, " ", n.User.LastName)</td>
                                <td>@Html.DisplayFor(m => n.sellerNote.CreatedDate)</td>
                                <td>@string.Concat(n.actionBy.FirstName, " ", n.actionBy.LastName)</td>
                                <td>@Html.DisplayFor(m => n.sellerNote.AdminRemarks)</td>

                                <td class="dropdown">

                                    <div id="dots" class="mynav-dropdown ">
                                        <img class="dropdown-toggle " data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" src="~/img/Dashboard/dots.png" />
                                        <div class="dropdown-menu buyer-request-menu mynav-dropdown-content dropdown-menu-right ">
                                            <button class="text-left dropdown-item nav-dropdown-item" onclick="location.href='/User/rejecteddownload/@n.sellerNote.ID'">Download Note</button>
                                        </div>
                                    </div>

                                </td>
                            </tr>
                            }


                        </tbody>





