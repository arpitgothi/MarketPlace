
@{
    ViewBag.Title = "dashboard";
    @model IEnumerable<NoteMarketPlace.Models.noteData>
}
<style>
    .table > thead > tr > th, td {
        text-align: center;
    }
</style>
<!-- Dashboard Section -->
<section id="dashboard">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-6">
                <p id="p-dashboard">Dashboard</p>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-6 text-right">
                <a class="btn btn-general  btn-work smooth-scroll" href="#" title="add note" role="button">Add Note</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 dashboard-detalis">
                <div class="col-md-4 col-sm-4 col-xs-12 earning">
                    <div class="div-content text-center">
                        <img src="../../img/dashboard/earning-icon.svg" class="img-responsive" alt="earning">
                        <p>My Earning</p>
                    </div>
                </div>
                <div class="col-md-8 col-sm-8 col-xs-12 earning">
                    <div class="col-md-6 col-sm-6 earning-1">
                        <div class="div-content text-center">
                            <p>@ViewBag.NoOfNotesold</p>
                            <p>Number of Notes Sold</p>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6 text-center earning-1">
                        <div class="div-content">
                            @if (@ViewBag.Earnings != null)
                            {
                                <p>$@ViewBag.Earnings</p>
                            }
                            else
                            {
                                <p>$0</p>
                            }
                            <p>Money Earned</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="col-md-4 col-sm-4 col-xs-12 text-center">
                    <div class="earning">
                        <div class="div-content">
                            <p>@ViewBag.NoOfDownloads</p>
                            <p>My Downloads</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-sm-4 col-xs-12 text-center">
                    <div class="earning">
                        <div class="div-content">
                            <p>@ViewBag.RejectedNotes</p>
                            <p>My Rejected Notes</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-sm-4 col-xs-12 text-center">
                    <div class="earning">
                        <div class="div-content">
                            <p>@ViewBag.BuyerReqs</p>
                            <p>Buyer Requests</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>



        <div class="inprogress">
            <div class="row">
                <div class="col-md-7 col-sm-7 col-xs-12">
                    <p>In Progress Notes</p>
                </div>
                <div class="col-md-5 col-sm-5 col-xs-12 text-right">
                    <div class="dashboard-search">
                        <div class="col-md-8 col-sm-8 col-xs-8">
                            <div class="form-group">
                                <input class="form-control" type="text">
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-4 col-xs-4" id="search">
                            <a class="btn-general btn-work smooth-scroll" title="search" role="button">Search</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="inprogress-table table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">ADDED DATE</th>
                                    <th scope="col">TITLE</th>
                                    <th scope="col">CATAGORY</th>
                                    <th scope="col">STATUS</th>
                                    <th scope="col">ACTION</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int i = 0;}
                                @foreach (var n in Model)
                                {
                                    i += 1;


                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => n.sellerNote.CreatedDate)</td>
                                        <td class="title">@Html.DisplayFor(modelItem => n.sellerNote.Title)</td>
                                        <td>@Html.DisplayFor(modelItem => n.NoteCategory.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => n.referenceData.Values)</td>
                                        <td><a class="link-margin" href="#"><img src="~/img/dashboard/eye.png"></a></td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                    <div class="text-center" aria-label="Page navigation example">
                        <ul class="pagination">
                            <li class="disabled"><a href="#">«</a></li>
                            <li class="active"><a href="#">1 <span class="sr-only">(current)</span></a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li><a href="#">»</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>



        <div class="published">
            <div class="row">
                <div class="col-md-7 col-sm-7 col-xs-12">
                    <p>Published Notes</p>
                </div>
                <div class="col-md-5 col-sm-5 col-xs-12 text-right">
                    <div class="dashboard-search">
                        <div class="col-md-8 col-sm-8 col-xs-8">
                            <div class="form-group">
                                <input class="form-control" type="text">
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-4 col-xs-4" id="search">
                            <a class="btn-general btn-work smooth-scroll" title="search" role="button">Search</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="published-table table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">ADDED DATE</th>
                                    <th scope="col">TITLE</th>
                                    <th scope="col">CATAGORY</th>
                                    <th scope="col">SELL TYPE</th>
                                    <th scope="col">PRICE</th>
                                    <th scope="col">ACTION</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var n in ViewBag.publishednotes)
                                {
                                    <tr>
                                        <td>@n.CreatedDate</td>
                                        <td>@n.Title</td>
                                        <td>@n.categoryS</td>
                                        @{

                                            bool isPaid = n.IsPaid;
                                            if (isPaid)
                                            {
                                                <td>Paid</td>
                                            }
                                            else
                                            {
                                                <td>Free</td>
                                            }

                                        }

                                        <td>@n.SellingPrice</td>
                                        <td>
                                            <div class="table-actions-edit">
                                                <img src="~/img/dashboard/edit.png" alt="edit">
                                                <img src="~/img/dashboard/delete.png" alt="delete">
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                    <div class="text-center" aria-label="Page navigation example">
                        <ul class="pagination">
                            <li class="disabled"><a href="#">«</a></li>
                            <li class="active"><a href="#">1 <span class="sr-only">(current)</span></a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li><a href="#">»</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div id="download-review" class="review-overlay">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-6">
                <p id="review-heading"> Add Review</p>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-6 text-right">
                <a href="javascript:void(0)" class="closebtn" onclick="closeReview()">&times;</a>
            </div>
            <div class="col-md-12 text-left">
                <p id="add-book-review-star" class="book-review-star"> <i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star-o" aria-hidden="false"></i></p>
            </div>
            <div class="col-md-12 text-left">
                <div class="form-group">
                    <p>Comments*</p>
                    <textarea id="review-comments" class="form-control">
                        </textarea>
                </div>
            </div>
        </div>

    </div>
    @Html.Partial("aaa")
</section>


<!-- Dashboard Section Ends -->
