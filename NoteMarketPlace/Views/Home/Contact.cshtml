
@{
    ViewBag.Title = "Contact";
}

<!-- Contact-Us Section -->
<section id="contact-us">
    <div class="contact-us-heading">
        <p>Contact Us</p>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12 touch">
                <p>Get in Touch</p>
                <p>Let us know how to get back to you</p>
            </div>
        </div>
        <div class="contact-us-feed">
            <form>
                <div class="row questions">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <p>Full Name*</p>
                                    <input type="text" class="form-control" id="name" placeholder="Enter your full name">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <p>Email Address*</p>
                                    <input type="email" class="form-control" id="email" placeholder="Email Address">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <p>Subject*</p>
                                    <input type="text" class="form-control" id="subject" placeholder="Subject">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <p>Message*</p>
                            <textarea class="form-control" id="message" placeholder="Comments..."></textarea>
                        </div>
                    </div>
                </div>
                <a class="btn btn-general btn-work smooth-scroll" href="#about" title="Download" role="button">SUBMIT</a>
            </form>
        </div>
    </div>
</section>
<!-- Contact-Us Section Ends -->
